@using IndigoApp.Areas.Manage.ViewModels;
@model CreateProductVM

<div class="container">
   
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="mb-3" col-md-3 style="margin-right: 30px;">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" >
            <span asp-validation-for="Name" style="color: red"></span>
        </div>
        <div class="mb-3" col-md-3 style="margin-right: 30px;">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color: red"></span>
        </div>
        <div class="mb-3" col-md-3 style="margin-right: 30px;">
            <label asp-for="ImgUrl" class="form-label">ImgUrl</label>
            <input asp-for="ImgUrl" class="form-control" >
            <span asp-validation-for="ImgUrl" style="color: red"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>